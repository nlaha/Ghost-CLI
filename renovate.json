{
  "extends": [
    "@nlaha:quietJS",
    ":semanticCommitTypeAll(chore)"
  ],
  "ignoreDeps": [
    "cli-table3",
    "standard-version",
    "validator"
  ],
  "packageRules": [
    {
      "depTypeList": [
        "devDependencies"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "groupName": "CLI Tools",
      "packageNames": [
        "chalk",
        "inquirer",
        "listr",
        "log-symbols",
        "ora"
      ],
      "updateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "groupName": "Well Known",
      "packageNames": [
        "debug",
        "fs-extra",
        "got",
        "lodash",
        "moment",
        "semver",
        "yarn"
      ],
      "updateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ]
}